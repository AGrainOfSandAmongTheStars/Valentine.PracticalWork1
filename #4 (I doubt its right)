<!DOCTYPE html>
<html>
<body>
    <script>
       function calculateRectangleArea(width, height) {
            return width * height;
        }
        let a = Number(prompt("Введіть ширину: "));
        let b = Number(prompt("Введіть висоту: "));
        console.log(calculateRectangleArea(a, b));
    </script>
    <script>
        function isEven(number) {
            return number % 2 === 0;
        }
        let a = Number(prompt("Введіть число: "));
        console.log(isEven(a));
    </script>
    <script>
        function greetUser(name) {
            console.log(`Привіт, ${name}!`);
        }
        let a = prompt("Як вас звати? ");
         greetUser(a);
    </script>
    <script>
        function sumArray(numbers) {
            let sum = 0;
            for (let i = 0; i < numbers.length; i++) {
             sum += numbers[i];
            }
            return sum;
        }
        console.log(sumArray([1, 2, 3, 4]));
    </script>
    <script>
        function maxOfThree(a, b, c) {
            return Math.max(a, b, c);
        }
        console.log(maxOfThree(5, 9, 16));
    </script>
</body>
</html>
